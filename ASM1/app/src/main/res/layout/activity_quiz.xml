                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans3_4"
                    android:textSize="@dimen/ans"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ques4"
                android:textSize="@dimen/ques"
                android:textColor="@color/design_default_color_primary_dark"/>

            <EditText
                android:id="@+id/ans4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ques5"
                android:textSize="@dimen/ques"
                android:textColor="@color/design_default_color_primary_dark"/>

            <EditText
                android:id="@+id/ans5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ques6"
                android:textSize="@dimen/ques"
                android:textColor="@color/design_default_color_primary_dark"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans6_1"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:id="@+id/ans6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans6_2"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans6_3"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans6_4"
                    android:textSize="@dimen/ans"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ques7"
                android:textSize="@dimen/ques"
                android:textColor="@color/design_default_color_primary_dark"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ans7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans7_1"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans7_2"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans7_3"
                    android:textSize="@dimen/ans"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ans7_4"
                    android:textSize="@dimen/ans"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ques8_1"
                android:textSize="@dimen/ques"
                android:textColor="@color/design_default_color_primary_dark"/>

